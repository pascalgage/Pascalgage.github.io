    width: 100%;
    justify-content: space-between;
}

.date input{
    width: 60%;
    margin-left: auto;
}

.place{
    display: flex;
    width: 100%;
    justify-content: space-between;
}

.place select{
    width: 61%;
}

.needs{
    display: flex;
    width: 100%;
    justify-content: space-between;
}

.needs input{
    width: 60%;
}

.instructions{
    display: flex;
    width: 100%;
    justify-content: space-between;
    margin-bottom: 30px;
}

.instructions input{
    width: 60%;
    height: 200%;
}

button{
    height: 40px;
    color: azure;
    background-color: #333333;
}

.radioB{
    display: flex;
    justify-content: space-evenly;
}
.checkbut{
    display: flex;
    justify-content: space-evenly;
}

